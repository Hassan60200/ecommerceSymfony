<div class="col-3">
    <div class="card">
        <img src="{{ p.picture }}" class="img-fluid" alt="test">
        <div class="card-body">
            <h4 class="card-title">{{ p.name }} ({{ p.price / 100 }} €)</h4>
            <span class="badge badge-danger p-2 m-2">{{ p.category.name }}</span>
            <p class="card-text">{{ p.shortDescription }}</p>
            <a href="{{ path("product_show", {'category_slug': p.category.slug, 'slug': p.slug}) }}" class="btn btn-primary btn-sm">Détails</a>
            <a href="{{ path('cart_add', {'id': p.id}) }}" class="btn btn-success">Ajouter</a>
        </div>
    </div>
</div>