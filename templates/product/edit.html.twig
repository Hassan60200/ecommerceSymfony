{% extends 'base.html.twig' %}

{% block title %}
    Édition de {{ product.name }}
{% endblock %}

{% block body %}
    <h1 class="text-center">Éditer le produit {{ product.name }}</h1>

    {{ form_start(formView) }}

    {{ form_errors(formView) }}

    <div class="row">
        <div class="col m-3">
            {{ form_row(formView.name) }} <br>
            {{ form_row(formView.price) }}
        </div>
        <div class="col m-3">
            {{ form_row(formView.picture) }}
            {{ form_row(formView.category) }} <br>
            {{ form_row(formView.shortDescription) }}
        </div>
    </div>
    <button type="submit" class="btn btn-success mt-4">
        <i class="fas fa-save"> Créer le produit</i>
    </button>

    {{ form_end(formView) }}
{% endblock %}