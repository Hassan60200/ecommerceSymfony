{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
<h1 class="text-center">Mes commandes</h1>

<table class="table text-center table-bordered mt-4">
    <thead>
    <tr>
        <th>Numéro</th>
        <th>Adresse</th>
        <th>Date de commande</th>
        <th>Produits</th>
        <th>Total</th>
    </tr>
    </thead>
    <tbody>
    {% for p in purchases %}
        <tr>
            <td>{{ p.id }}</td>
            <td>{{ p.address }} <br> {{ p.postalCode }}, {{ p.city }}</td>
            <td>{{ p.purchasedAt | date('d/m/Y H:i') }}</td>
            <td>
                 <ul>
                     {% for item in p.purchaseItems %}
                        <li>
                          <strong> {{ item.quantity}} x </strong> {{ item.productName }} {{ item.total  / 100}} €
                        </li>
                     {% endfor %}
                 </ul>
            </td>
            <td>{{ p.total / 100 }} €</td>
        </tr>
    {% endfor %}
    </tbody>
</table>


{% endblock %}
